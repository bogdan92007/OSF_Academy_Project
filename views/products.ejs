<!doctype html>
<html lang='en'>
<head>
    <title><%= title %></title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous'>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <!--Navbar-->
    <nav class='navbar navbar-light bg-light mb-2'>
        <a class='navbar-brand fs-1'>Alibazon</a>
        <form class='form-inline'>
            <a class='btn btn-outline-success' id='mens-category-button' href='../catalog/mens' type='button'>Mens</a>
            <a class='btn btn-outline-success' id='womens-catalog-button' href='../catalog/womens' type='button'>Womens</a>   
            <a href="/wishlist" class='btn btn-outline-success'>Wishlist</a>  
        </form>
    </nav>
    <!--/Navbar-->
    <!--Breadcrumbs-->
    <nav aria-label='breadcrumb'>
        <ol class='breadcrumb mb-5 pt-4'>
            <li class='breadcrumb-item'><a href='/'>Home</a></li>
            <li class='breadcrumb-item'><a href='/catalog/<%= title %>'><%= title %></a></li>
        </ol>
    </nav>
    <!--/Breadcrumbs-->
    <% for(let i = 0; i < apiResponse.length; i++) { %>
        <div class="card mb-3" style="max-width: 1280px;">
            <div class="row g-0" style="margin: 10%;">
                <div class="col-md-4">
                    <% for(let j = 0; j < apiResponse[i].image_groups.length; j++) { %>
                        <img src="/catalog/<%= apiResponse[i].image_groups[j].images[0].link %>" class="img-fluid rounded-start" alt="category image">
                        <% if (i === 0 || j === 0) { %>
                            <% break %>
                        <% } %>
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= apiResponse[i].name %></h5>
                        <p class="card-text"><%= apiResponse[i].short_description %></p>
                        <p class="card-text"> <%= apiResponse[i].currency %> :       <%= apiResponse[i].price %></p>
                        <a href="/products/<%= apiResponse[i].id %>" class='btn btn-outline-success'>View product.</a>
                    </div>
                </div>
            </div>
        </div>     
        <% } %>             
        <!--Footer-->
        <div class='footer' style='margin-top: 25%;'>
            <p>Made by myself - Work in progress</p>
        </div>
        <!--/Footer-->
        <script src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous'></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js' integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1' crossorigin='anonymous'></script>
        <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js' integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM' crossorigin='anonymous'></script>
    </body>
    </html>