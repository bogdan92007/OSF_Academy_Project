<!DOCTYPE html>
<html lang='en'>
<head>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous'>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <title><%= title %></title>
</head>
<body class='container-fluid'>
    <!--Navbar-->
    <nav class='navbar navbar-light bg-light'>
        <a class='navbar-brand fs-1'>Alibazon</a>
        <form class='form-inline'>
          <a class='btn btn-outline-success' id='mens-category-button' href='catalog/mens' type='button'>Mens</a>
          <a class='btn btn-outline-success' id='womens-catalog-button' href='catalog/womens' type='button'>Womens</a>   
          <a href="/wishlist" class='btn btn-outline-success'>Wishlist</a>

        </form>
    </nav>
    <!--Navbar-->
    <!--Breadcrumbs-->
    <nav aria-label='breadcrumb'>
        <ol class='breadcrumb mb-4 pt-4'>
            <li class='breadcrumb-item'><a href="/">Home</a></li>
            <li class='breadcrumb-item'><a href="/catalog/<%= title %>"><%= title %></a></li>
        </ol>
    </nav>
    <!--/Breadcrumbs-->
    
    <!--Products page-->
    
    <% for(let i = 0; i < apiResponse.length; i++) { %>
        <div class="card mx-5" style="max-width: 1980px;">
            <img src="<%= apiResponse[i].image %>" class="img-fluid rounded-start" alt="category image">
            <div class="row g-0" style="margin: 5%;">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= apiResponse[i].name %></h5>
                        <p class="card-text"><%= apiResponse[i].page_description %></p>
                        <a href="/catalog/<%= apiResponse[i].id %>" class='btn btn-outline-success'>View More!</a>
                    </div>
                </div>
            </div>
        </div>     
        <% } %>             
        
        <!--/Products page-->
        <!--Footer-->
        <div class='footer' style="margin-top: 25%;">
            <p>Made by myself - Work in progress</p>
        </div>
        <!--/Footer-->
        
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous'></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js' integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1' crossorigin='anonymous'></script>
        <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js' integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM' crossorigin='anonymous'></script>
    </body>
    </html>